@model WeLearn.Data.Models.Comment

@{
    ViewData["Title"] = "Delete a comment";
}
<div class="container">
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this comment?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Content)
            </dd>
            <dt class="col-sm-2">
                User information
            </dt>
            <dd class="col-sm-10">
                ID: @Html.DisplayFor(model => model.ApplicationUser.Id)
                <br />
                Username: @Html.DisplayFor(model => model.ApplicationUser.UserName)
                <br />
                Email: @Html.DisplayFor(model => model.ApplicationUser.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lesson)
            </dt>
            <dd class="col-sm-10">
                Name:
                @Html.DisplayFor(model => model.Lesson.Name)
                <br />
                Description:
                @Html.DisplayFor(model => model.Lesson.Description)
                <br />
                Grade:
                @Html.DisplayFor(model => model.Lesson.Grade)
                <br />
                Category:
                @Html.DisplayFor(model => model.Lesson.Category.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Model.DateCreated.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
            <a asp-action="Index" class="btn btn-sm btn-outline-dark">Back to all</a>
        </form>
    </div>
</div>