@model WeLearn.Data.Models.Comment

@{
    ViewData["Title"] = "Comment details";
}

<div class="container">
    <h1>Details</h1>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            Created by user
        </dt>
        <dd class="col-sm-10">
            ID: @Html.DisplayFor(model => model.ApplicationUser.Id)
            <br />
            Username: @Html.DisplayFor(model => model.ApplicationUser.UserName)
            <br />
            Email: @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson)
        </dt>
        <dd class="col-sm-10">
            Name: @Html.DisplayFor(model => model.Lesson.Name)
            <br />
            Description: @Html.DisplayFor(model => model.Lesson.Description)
            <br />
            Grade: @Html.DisplayFor(model => model.Lesson.Grade)
            <br />
            Category: @Html.DisplayFor(model => model.Lesson.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Model.DateCreated.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-success">Edit</a>
    <a asp-action="Index" class="btn btn-sm btn-outline-dark">Back to all</a>
</div>
