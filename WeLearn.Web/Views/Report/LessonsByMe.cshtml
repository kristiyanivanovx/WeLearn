@model IEnumerable<LessonReportModel>
@{
    ViewData["Title"] = "Lessons reported by me";
}

<div class="container">
    <div class="row">
        @foreach (var report in Model)
        {
            <div class="col-lg-4">
                <div class="card">
                    <video id="player" class="js-player" playsinline controls crossorigin="anonymous" alt="@report.VideoName" data-poster="@report.VideoLink">
                        <source src="@report.VideoLink" type="@report.VideoContentType" />
                        <a href="@report.VideoLink" download>Download</a>
                    </video>
                    <div class="card-body">
                        <h5 class="card-title">@report.LessonName</h5>
                        <hr />
                        <p class="card-text">@report.Description</p>
                        <p class="card-text">
                            @{ var createdBy = report.OriginApplicationUserUserName == null ? "Deleted User" : report.OriginApplicationUserUserName; }
                            <small class="text-muted">Created by - @createdBy | </small>
                            <small class="text-muted">Category - @report.CategoryName | </small>
                            <small class="text-muted">Grade - @report.Grade</small>
                        </p>
                        <a asp-controller="Lesson" asp-action="Watch" asp-route-id="@report.OriginId" class="btn btn-sm btn-outline-dark">
                            <i class="fas fa-info"></i> Details
                        </a>
                        <a asp-controller="Lesson" asp-action="Download" asp-route-link="@report.ZippedFile" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-arrow-down"></i> Download Resources
                        </a>
                    </div>
                    <div class="card-body">
                        <h5>Report details</h5>
                        <hr />
                        <div class="form-group">
                            <label asp-for="@report.Subject"></label>
                            <h6 class="card-title">@report.Subject</h6>
                        </div>
                        <div class="form-group">
                            <label asp-for="@report.ReportDescription"></label>
                            <h6 class="card-text">@report.ReportDescription</h6>
                        </div>

                        <a asp-controller="Report" asp-action="LessonEdit" asp-route-reportid="@report.ReportId" class="btn btn-sm btn-outline-success mb-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-controller="Report" asp-action="LessonDelete" asp-route-reportid="@report.ReportId" class="btn btn-sm btn-outline-danger mb-2">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @*<partial name="_MultipleLessonsPartial" />*@
    @if (Model.Count() == 0)
    {
        <h1 class="display-4 text-center">You don't have any reports to lessons yet.</h1>
        <hr />
    }
</div>

@section Scripts {
    <script src="https://cdn.polyfill.io/v2/polyfill.min.js?features=es6,Array.prototype.includes,CustomEvent,Object.entries,Object.values,URL"></script>
    <script src="https://unpkg.com/plyr@3"></script>
    <script>
        const players = Array.from(document.querySelectorAll('.js-player')).map(p => new Plyr(p));
        window.player = player;
    </script>
}
