@model AdminReportDeleteModel
@{
    ViewData["Title"] = "Delete a report";
}

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6 text-center">
            <h1>Delete</h1>
            <h3>Report</h3>
            <hr />
            <div>
                <h4>Information about the user</h4>
                <hr />
                <p>User ID: @Model.ApplicationUserId</p>
                <p>Username: @Model.ApplicationUserUserName</p>
                <p>Email: @Model.ApplicationUserEmail</p>
            </div>
            <hr />
            <div>
                @if (Model.LessonId != null)
                {
                    <h4>Additional information about the lesson</h4>
                    <hr />
                    <p>Name: @Model.LessonName</p>
                    <p>Description: @Model.LessonDescription</p>
                    <a asp-area="" asp-controller="Lesson" asp-action="Watch" asp-route-id="@Model.LessonId" class="btn btn-sm btn-outline-secondary mt-2 mb-1">Watch</a>
                }
                @if (Model.CommentId != null)
                {
                    <h4>Additional information about the comment</h4>
                    <hr />
                    <span>Content: @Model.CommentContent</span>
                }
            </div>

            <hr />
            <h4>Report details</h4>
            <hr />
            <p>Subject: @Model.Subject</p>
            <p>Description: @Model.Description</p>
            <p>Date created: <time datetime="@Model.DateCreated.ToString("O")">@Model.DateCreated.ToString("g")</time></p>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" disabled /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>

            <form asp-action="Delete">
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
                    <a asp-action="Index" class="btn btn-sm btn-outline-dark">Back to all</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_DateTimePicker" />
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
