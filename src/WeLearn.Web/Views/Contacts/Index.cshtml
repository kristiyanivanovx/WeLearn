@model ContactsInputModel
@{
    ViewData["Title"] = "Contacts";
}

<div class="container">
	<div class="text-center">
		<h1 class="display-4">Contacts</h1>
		<hr />
		<p>Feel free to send an email with if anything is concerning you.</p>
		<p>We are always happy to get some feedback or criticism.</p>
		<div class="mt-3 offset-md-3 col-md-6">
			<form asp-controller="Contacts" asp-action="Index" method="post">
				<div class="form-group">
					<label asp-for="To"></label>
					<input asp-for="To" class="form-control" />
					<span asp-validation-for="To" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Subject"></label>
					<input asp-for="Subject" class="form-control" />
					<span asp-validation-for="Subject" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Content"></label>
					<textarea asp-for="Content" class="form-control" ></textarea>
					<span asp-validation-for="Content" class="text-danger"></span>
				</div>
				<input class="btn btn-sm btn-outline-success" type="submit" name="submit" value="Send email" />
			</form>
		</div>
	</div>
</div>