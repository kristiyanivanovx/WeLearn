@model PrivateMessageInputModel
@{
    ViewData["Title"] = "Write a private message";
}

<div class="container text-center">
    <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3 text-center">
        <form asp-controller="Message" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="ReceiverUsername"></label>
                <input asp-for="ReceiverUsername" class="form-control" />
                <span asp-validation-for="ReceiverUsername" class="text-danger"></span>
                @if (Model.ReceiverUsernameErrorMessage != null)
                {
                    <span class="text-danger">@Model.ReceiverUsernameErrorMessage</span>
                }
            </div>
            <div class="form-group">
                <label asp-for="Text"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <input class="btn btn-sm btn-outline-success" type="submit" name="submit" value="Send" />
        </form>
    </div>
</div>
