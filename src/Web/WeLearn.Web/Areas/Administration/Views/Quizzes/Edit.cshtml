@model QuizEditModel
@{
    ViewData["Title"] = "Edit a quiz";
}

@{ var points = "points"; }
<div class="container text-center">
    <h2>@ViewData["Title"]</h2>
    <hr/>

    <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3 text-center">
        <form asp-area="Administration" asp-controller="Quizzes" asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId"
                        asp-items="Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()))"
                        class="form-control">
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuestionIds" class="control-label"></label>
                <select asp-for="QuestionIds"
                        asp-items="Model.Questions.Select(x => new SelectListItem(string.Concat(x.Content, ' ', '-', ' ', x.Points, ' ', points), x.Id.ToString()))"
                        multiple
                        class="form-control multiselect">
                </select>
                <span asp-validation-for="QuestionIds" class="text-danger"></span>
            </div>

            <input class="btn btn-sm btn-outline-success" type="submit" name="submit" value="Submit"/>
            <a asp-controller="Questions" asp-action="Index" class="btn btn-sm btn-outline-dark">
                Cancel
            </a>
        </form>
    </div>
</div>