</head>

<body>
    <section class="ftco-section pt-5">
        <div class="container">
            @* <div class="row justify-content-center"> *@
            @*     <div class="col-md-6 text-center mb-5"> *@
            @*         <h2 class="heading-section">Login #05</h2> *@
            @*     </div> *@
            @* </div> *@

            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="wrap">
                        <div class="img background-image-forms"></div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100 mb-3">
                                    <h3 class="">@ViewData["Title"]</h3>                                
                                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                                </div>
                                
                                <div class="w-100">
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div>
                                            @*@foreach (var provider in Model.ExternalLogins)
                                    	    {
                                    		    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    	    }*@

                                            <div class="social-media d-flex justify-content-end">
                                                @foreach (var provider in Model.ExternalLogins)
                                                {
                                                    if (provider.Name == "Google")
                                                    {
                                                        @*
                                                        <button type="submit" class="btn btn-sm btn-outline-dark img-center" name="provider" value="@provider.Name">
                                                            <img width="20" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png"/>
                                                            &nbsp;Google
                                                        </button>
                                                        *@
                                                        // was a tag
                                                        <button href="#" class="social-icon d-flex align-items-center justify-content-center"
                                                                name="provider" value="@provider.Name"
                                                                type="submit">
                                                            <span class="fa fa-google"></span>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="submit" class="btn btn-sm btn-primary" name="provider" 
                                                                value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </form>
                                    
                                    @* <a href="#" class="social-icon d-flex align-items-center justify-content-center"> *@
                                    @*     <span class="fa fa-twitter"></span> *@
                                    @* </a> *@
                                </div>
                            </div>

                            <form id="account" method="post" class="signin-form">
                                <div class="form-group">
                                    <input asp-for="Input.UserName" class="form-control mb-2" required/>
                                    <label asp-for="Input.UserName" class="form-control-placeholder">Username</label>
                                    <span asp-validation-for="Input.UserName" class="text-danger mt-2"></span>
                                </div>

                                <div class="form-group mt-3">
                                    <input asp-for="Input.Password" class="form-control mb-2" required type="password"/>
                                    <label asp-for="Input.Password" class="form-control-placeholder">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger mt-2"></span>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Log in</button>
                                </div>

                                <div class="form-group d-md-flex">
                                    <div class="w-50 text-left">
                                        <label class="checkbox-wrap checkbox-primary mb-0" asp-for="Input.RememberMe">
                                            <input asp-for="Input.RememberMe">
                                            <span class="checkmark"></span>
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                    
                                    @* commented out links are not implemented *@
                                    @*<p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
