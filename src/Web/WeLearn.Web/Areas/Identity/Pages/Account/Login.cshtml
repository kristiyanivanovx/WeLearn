                                    @* </div> *@
                                </div>
                            </form>

                            <p class="text-center">
                                Not a member? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user.</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

