@model ContactsInputModel
@{
    ViewData["Title"] = "Contacts";
}

<div class="container center bg-base mb-5 mt-3">
	<div class="text-center">
		<h3>Contacts</h3>
		<hr />
		<h5>
			Feel free to send an email with if anything is concerning you.
		</h5>
		<h5>
			We are always happy to get some feedback or criticism.
		</h5>

		<div class="mt-3 offset-md-3 col-md-6">
			<form asp-controller="Contacts" asp-action="Index" method="post">
				<div class="form-group">
					<label asp-for="@Model.FromName"></label>
					<input asp-for="@Model.FromName" type="text" class="form-control black-text" />
					<span asp-validation-for="@Model.FromName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="@Model.FromEmail"></label>
					<input asp-for="@Model.FromEmail" type="email" class="form-control black-text" />
					<span asp-validation-for="@Model.FromEmail" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="@Model.Subject"></label>
					<input asp-for="@Model.Subject" type="text" class="form-control black-text" />
					<span asp-validation-for="@Model.Subject" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="@Model.Content"></label>
					<textarea asp-for="@Model.Content" type="text" class="form-control black-text"></textarea>
					<span asp-validation-for="@Model.Content" class="text-danger"></span>
				</div>
				<input class="btn btn-sm btn-success" type="submit" name="submit" value="Send email" />
			</form>
		</div>
	</div>
</div>