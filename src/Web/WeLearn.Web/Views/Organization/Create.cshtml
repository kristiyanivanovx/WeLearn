@model WeLearn.Web.ViewModels.Organization.OrganizationInputModel
@{
    ViewData["Title"] = "Create an organization";
}

<div class="container text-center">
    <h2>@ViewData["Title"]</h2>
    <hr/>

    <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3 text-center">
        <form asp-controller="Organization" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <input class="btn btn-sm btn-outline-success" type="submit" name="submit" value="Submit"/>
        </form>
    </div>
</div>