@model OrganizationEditModel
@{
    ViewData["Title"] = "Edit an organization";
}

<div class="container text-center bg-base bg-solid">
    <h3 class="mt-2 mb-4">@ViewData["Title"]</h3>
    <hr/>

    <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3 text-center">
        <form asp-controller="Organization" asp-action="Edit" method="post">
            <input type="hidden" asp-for="CreatorId" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <input class="btn btn-sm btn-outline-success" type="submit" name="submit" value="Save"/>
            <a asp-area="" asp-controller="Organization" asp-action="View" asp-route-id="@Model.Id"
                    type="button" class="btn btn-sm btn-outline-dark" data-dismiss="modal">
                Cancel
            </a>
        </form>
    </div>
</div>