@using WeLearn.Web.ViewModels.Organization
@model OrganizationViewModel
@{
    ViewData["Title"] =  @Model.Name;
}

<div class="container-fluid pl-5 pr-5 text-center">
    <h3 class="mt-4 mb-4">@ViewData["Title"]</h3>

    <div>
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Member count
                        </th>
                        <th>
                            Date created
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>
                            @Model.Name
                        </td>
                        <td>
                            @Model.Description
                        </td>
                        <td>
                            @Model.ApplicationUsersCount
                        </td>
                        <td>
                            <time datetime="@Model.CreatedOn.ToString("O")">
                                @Model.CreatedOn.ToString("g")
                            </time>
                        </td>
                        <td>
                            @{
                                string userId = User?.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                                var isMember = Model.ApplicationUsers
                                    .Any(x => x.Id == userId);
                            }
                            @if (isMember)
                            {
                                <a asp-controller="Organization" asp-action="Leave" asp-route-id="@Model.Id"
                                   class="btn btn-sm btn-outline-danger">
                                    Leave
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Organization" asp-action="Join" asp-route-id="@Model.Id"
                                   class="btn btn-sm btn-outline-success">
                                    Join
                                </a>
                            }
                            <a asp-controller="Organization" asp-action="View" asp-route-id="@Model.Id"
                               class="btn btn-sm btn-outline-primary mt-1 mb-1">
                                View
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
                
                <div class="text-center black-text mb-5">
                    <h5>Current members:</h5>
                    @foreach (var user in @Model.ApplicationUsers)
                    {
                        <div>@user.UserName</div>
                    }
                </div>

                <a asp-area="" asp-controller="Organization" asp-action="All"
                   class="btn btn-sm btn-outline-dark">
                    <i class="fas fa-arrow-left"></i> All
                </a>
            </div>

            <div class="col-md-2"></div>
        </div>
    </div>
</div>