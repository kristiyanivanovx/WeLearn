@model IEnumerable<QuizViewModel>
@{
    ViewData["Title"] = "All quizzes";
}

<div class="container pl-5 pr-5 text-center bg-base bg-solid">
    <h3 class="mt-2 mb-4">Quizzes available for taking</h3>

    <div>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Max points
                        </th>
                        <th>
                            Date created
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var availableQuiz in @Model)
                    {
                        <tr>
                            <td>
                                @availableQuiz.Name
                            </td>
                            <td>
                                @availableQuiz.CategoryName
                            </td>
                            <td>
                                @availableQuiz.MaxPoints
                            </td>
                            <td>
                                <time datetime="@availableQuiz.CreatedOn.ToString("O")">
                                    @availableQuiz.CreatedOn.ToString("g")
                                </time>
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Quiz" asp-action="Take" asp-route-id="@availableQuiz.Id"
                                   class="btn btn-sm btn-outline-success">
                                    Take
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
